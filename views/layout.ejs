			<span><a href="/quizes">Preguntas</a></span>
			<span><a href="/author">Cr√©ditos</a></span>
		</nav>
		<section class="main" id="s1">
			<% if (errors.length) { %>
				<div id="ErrorMsgs">
					<p><i class="fa fa-exclamation-triangle"></i> Corregir errores</p>
					<% for (var i in errors) { %>
					<span><i class="fa fa-times"></i> <%= errors[i].message %></span><br/>
					<% } %>
				</div>
			<% } %>
			<%- body %>
		</section>
		<footer class="footer" id="f1">
			<span class="footer-left">
				<a href="http://es.wikipedia.org/wiki/Quiz" title="Que es un Quiz?"><i class="fa fa-2x fa-info-circle"></i></a>	
			</span>
			<span class="footer-mid"></span>
			<span class="footer-right">
				<a href="https://github.com/mobarrio/miridiax-quiz.git" target="_blank" title="Github"><i class="fa fa-2x fa-github"></i></a>
			</span>
		</footer>
	  </div>
  </body>
